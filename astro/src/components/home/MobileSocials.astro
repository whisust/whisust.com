---
const socials = [
  {
    name: 'GitHub',
    url: 'https://github.com/whisust',
    icon: 'i-uil-github',
  },
  {
    name: 'LinkedIn',
    url: 'https://www.linkedin.com/in/antoinelatrille/',
    icon: 'i-uil-linkedin',
  },
];
// {
//     name: 'Twitter',
//     url: 'https://www.twitter.com/whisust',
//     icon: 'i-uil-twitter',
// },
---
<section class='md:hidden mb-4'>
  <h2 class='hidden'>Socials section</h2>
  <ul class='flex justify-around mb-2'>
    {
      socials.map((item) => (
        <li class='bg-white px-4 py-2 text-green border-black border-2 rounded clickable-card-shadow'>
          <a href={item.url} target='_blank' title={`Go to ${item.name}`}>
            <div class:list={[item.icon, 'p-6']} />
          </a>
        </li>
      ))
    }
  </ul>
</section>
